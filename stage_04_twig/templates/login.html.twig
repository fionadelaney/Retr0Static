{% extends '_base.html.twig' %}

{# ------------------------------------------------- #}
{% block pageTitle %}Login{% endblock %}

{# ------------------------------------------------- #}
{% block main %}

    <div class="container">
        <div class="login">
        <h1>Login</h1>
        <form method="post" action="{{ action_url('login') }}">
            <p><input type="text" name="username" value="" placeholder="Username" /></p>
            <p><input type="password" name="password" value="" placeholder="Password" /></p>
            <div class="buttons"><input type="submit" name="submit" value="Login" />&nbsp;<span class="btn"><a href="{{ action_url('register') }}" class="btn">Register</a></span></div>
        </form>
        </div>
    </div>

{% endblock %}